@model IEnumerable<dt191_moment3.Models.Author>

@{
    ViewData["Title"] = "Författare";
}

<div class="container">
    <h1 class="text-center mt-4">✍️ Författare</h1>

    <div class="mb-3">
        <a class="btn btn-success" asp-action="Create">➕ Skapa ny</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>🛠️ Åtgärder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">✏️ Redigera</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">ℹ️ Detaljer</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">🗑️ Radera</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
